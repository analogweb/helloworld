<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.analogiweb</groupId>
	<artifactId>analogweb-helloworld</artifactId>
	<packaging>war</packaging>
	<version>0.9.0-SNAPSHOT</version>
	<url>https://github.com/analogweb</url>
	<organization>
		<name>Analog Web Framework Development Team</name>
	</organization>
	<issueManagement />
	<ciManagement />
	<inceptionYear>2014</inceptionYear>
	<contributors />
	<scm>
		<connection>scm:git:git@github.com:analogweb/helloworld.git</connection>
		<developerConnection>scm:git:git@github.com:analogweb/helloworld.git</developerConnection>
	</scm>
	<licenses>
		<license>
			<name>MIT license</name>
			<url>http://www.opensource.org/licenses/mit-license.php</url>
			<distribution>repo</distribution>
			<comments>All source code is under the MIT license</comments>
		</license>
	</licenses>
	<properties>
		<maven.compiler.target>1.7</maven.compiler.target>
		<maven.compiler.source>1.7</maven.compiler.source>
		<analogweb.version>${project.version}</analogweb.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
	</properties>
	<parent>
		<groupId>org.analogweb</groupId>
		<artifactId>analogweb-parent-modules</artifactId>
		<version>6</version>
		<relativePath />
	</parent>
	<build>
		<finalName>analog-helloworld</finalName>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>${maven.compiler.source}</source>
					<target>${maven.compiler.target}</target>
					<encoding>${project.build.sourceEncoding}</encoding>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.2.1</version>
				<executions>
					<execution>
						<goals>
							<goal>java</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<mainClass>org.analogweb.helloworld.RunOnNetty4</mainClass>
					<commandlineArgs>-Dfile.encoding=UTF-8</commandlineArgs>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.analogweb</groupId>
			<artifactId>analogweb-core</artifactId>
			<version>${analogweb.version}</version>
		</dependency>
		<dependency>
			<groupId>org.analogweb</groupId>
			<artifactId>analogweb-netty</artifactId>
			<version>${analogweb.version}</version>
		</dependency>
	</dependencies>
	<profiles>
		<profile>
			<id>sun</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>exec-maven-plugin</artifactId>
						<version>1.2.1</version>
						<executions>
							<execution>
								<goals>
									<goal>java</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<mainClass>org.analogweb.helloworld.RunOnHttpServer</mainClass>
							<commandlineArgs>-Dfile.encoding=UTF-8</commandlineArgs>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>servlet</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.eclipse.jetty</groupId>
						<artifactId>jetty-maven-plugin</artifactId>
						<version>9.2.2.v20140723</version>
						<configuration>
							<scanIntervalSeconds>10</scanIntervalSeconds>
							<webApp>
								<contextPath>/</contextPath>
							</webApp>
						</configuration>
					</plugin>
				</plugins>
			</build>
			<dependencies>
				<dependency>
					<groupId>org.analogweb</groupId>
					<artifactId>analogweb-servlet</artifactId>
					<version>${analogweb.version}</version>
				</dependency>
			</dependencies>
		</profile>
	</profiles>
</project>
